<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#000000">

    <!-- App Icon/Logo Area -->
    <TextView
        android:id="@+id/tv_start_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="âœ¦"
        android:textSize="80sp"
        android:textColor="#FF8C00"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_start_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_title"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/tv_start_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_description"
        android:textSize="16sp"
        android:textColor="#CCCCCC"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="48dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <!-- Start Button -->
    <Button
        android:id="@+id/btn_start_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_button"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_start_background"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp" />

</LinearLayout>

